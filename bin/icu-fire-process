#!/usr/bin/env lsc
require! program: commander
ic = require '../'
{control-process} = ic.process!

program
  .version (require require.resolve \../package.json).version
  .description 'fire a process'
  .arguments '<process-name> <token>'
  .action (process-name, json) ->
    data = JSON.parse json
    err, res, more <- control-process process-name, 'fire', data
    if err 
      console.error err

program.parse process.argv
