#!/usr/bin/env lsc
require! program: commander
ic = require '../'
{control-process} = ic.process!

program
  .version (require require.resolve \../package.json).version
  .description 'turn a process into running mode'
  .arguments '<process-name>'
  .action (process-name) ->
    err, res, more <- control-process process-name, 'run'
    if err
      console.error err

program.parse process.argv
